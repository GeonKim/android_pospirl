<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginLeft="12dp"
    android:orientation="horizontal"
    android:layout_centerHorizontal="true"
    android:padding="0dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:background="@drawable/shadow"
        android:elevation="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp" >

            <Button
                android:id="@+id/article_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                android:background="@null"
                android:ellipsize="end"
                android:maxLines="1"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="article title"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="17dp"
                android:textAlignment="textStart"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/expandable_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="@null"
                app:srcCompat="@drawable/ic_expand_more" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/article_lime_analysis"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@+id/title_view"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:visibility="visible">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_weight="3">

                    <TextView
                        android:id="@+id/Prediction_Prob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Prediction Prob"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:text="상승"
                            android:textColor="@color/postechOrange"/>

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textView"
                            android:text="하락"
                            android:textColor="@color/colorPrimaryDark"/>


                    </LinearLayout>

                    <com.github.mikephil.charting.charts.HorizontalBarChart
                        android:id="@+id/probChart"
                        android:layout_width="match_parent"
                        android:layout_height="63dp"
                        android:layout_centerInParent="true" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/up_down_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/up_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Up"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="@color/postechOrange"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/down_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Down"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <com.github.mikephil.charting.charts.HorizontalBarChart
                        android:id="@+id/featureChart"
                        android:layout_below="@+id/up_down_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/highlight_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Text with highlighted words"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/highlight_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:text="this is highlighted texts"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>